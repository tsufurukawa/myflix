%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6" do |f|
          = f.alert_message "Please fix the error(s) below."
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              = link_to "Add a New Video", "#"
          %br
          %fieldset
            = f.text_field :title, control_col: "col-sm-3"
            = f.select :category_id, Category.all.collect { |c| [c.name, c.id] }
            = f.text_area :description, rows: 8
            = f.file_field :large_cover, label: "Large Cover", class: "form-control"
            = f.file_field :small_cover, label: "Small Cover", class: "form-control"
            = f.text_field :video_url, label: "Video URL", control_col: "col-sm-3"
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit "Add Video"